<%- include('./components/head') %>
    <header>
        <h1>Filme</h1>
        <%- include('./components/nav') %>
    </header>
    <main>
        <div class="container">
            <div class="item">
                <img src="<%= filme.imagem %>" alt="capa do filme">
            </div>
            
            <div class="item texto">
                <h2><%= filme.nome %></h2>
                <p><%= filme.descricao %></p>
                <a href="/editar/<%= filme.id %>" class="editar">Editar</a>
                <a href="/deletar/<%= filme.id %>" class="apagar">Excluir</a>
            </div>
        </div>
    </main>
    
        <%- include('./components/footer') %>
    
